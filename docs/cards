let splitdata = s => {
  let linedata = s.split('\n').filter(line => line != '');
  let c = [];
  for (let i = 0; i < linedata.length / 2; i++) {
    c.push([linedata[2*i], linedata[2*i+1]]);
  }
  return c;
}

